<div class="container">
    <div class="col-md-8">

        <div class="card">
            <div class="card-header bg-primary text-white">
                {{ title }}
            </div>
            <div class="card-body">
                <section class="container row justify-content-center">
                    <article>
                        <form class="was-validated" id="expenses-form" onsubmit="expenditureSubmit({{ idSession }}); return false;" action="{{ action }}" method="post">

                            <input id="id" name="id" type="hidden" value="">
                            <input class="form-control" name="idSession" id="idSession" type="hidden" required="true" value="">
                            <div class="form-group">
                                <label class="sr-only" for="description"> Descripcion: </label>
                                <input class="form-control" name="description" id="description" type="string" required="true" value="">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="amount"> Monto: </label>
                                <input class="form-control" name="amount" id="amount" type="number" autofocus="true" placeholder="Monto" required="true" value="">
                            </div>
                            <div class="form-group">
                                <input class="btn btn-lg btn-block btn-primary" type="submit" value="{{ buttonName }}" />
                            </div>

                        </form>
                    </article>
                </section>
            </div>
        </div>
    </div>
</div>