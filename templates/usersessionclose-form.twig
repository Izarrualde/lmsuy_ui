<div class="container">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                {{ title }}
            </div>
            <div class="card-body">
                <section class="container row justify-content-center">
                    <article>
                        <form class="was-validated" id="usersession-form" onsubmit="userSessionSubmit({{ idSession }}); return false;" action="{{ action }}" method="post">

                            <input id="id" name="id" type="hidden">
                            <input name="idUser" id="idUser" type="hidden">
                            <input name="idSession" id="idSession" type="hidden">
                            <input class="form-control" name="points" id="points" type="hidden" required="true">
                            <input name="isApproved" id="isApproved" type="hidden">
                            <input name="start" id="start" type="hidden">

                            <div class="form-group">
                                <label for="start"> Inicio: </label>
                                <input class="form-control" name="start" id="start" type="datetime-local" >
                                <small id="start" class="form-tet text-muted"> Fecha y hora de inicio </small>
                            </div>

                            <div class="form-group inactive-data">
                                <label for="end"> Fin: </label>
                                <input class="form-control" name="end" id="end" type="datetime-local">
                                <small id="end" class="form-tet text-muted"> Fecha y hora de finalizacion </small>
                            </div>

                            <div class="form-group inactive-data">
                                <label for="cashout"> Cashout: </label>
                                <input class="form-control" name="cashout" id="cashout" autofocus="true" required="true">
                                <small id="cashout" class="form-tet text-muted"> cashout </small>
                            </div>

                            <div class="form-group">
                                <input class="btn btn-lg btn-block btn-primary" type="submit" value="{{ buttonName }}" />
                            </div>
                            <br><br><br><br>
                        </form>
                    </article>
                </section>
            </div>
        </div>
    </div>
</div>