<div class="container">
    <div class="col-md-8">

        <div class="card">
            <div class="card-header bg-primary text-white">
                {{ title }}
            </div>
            <div class="card-body">
                <section class="container row justify-content-center">
                    <article>
                        <form class="was-validated" id="buyins-form" onsubmit="buyinSubmit({{ idSession }}); return false;" action="{{ action }}" method="post">

                            <input id="id" name="id" type="hidden">
                            <input id="idSession" name="idSession" type="hidden">
                            <input name="idUserSession" id="idUserSession" type="hidden" required="true">
                            <div class="form-group">
                                <label for="amountCash"> amountCash: </label>
                                <input class="form-control" name="amountCash" id="amountCash" type="number" autofocus="true" placeholder="amountCash" required="true">
                            </div>
                            <div class="form-group">
                                <label for="amountCredit"> amountCredit: </label>
                                <input class="form-control" name="amountCredit" id="amountCredit" type="number" placeholder="amountCredit" required="true">
                            </div>
                            <div class="form-group">
                                <label for="hour"> hora: </label>
                                <input class="form-control" name="hour" id="hour" type="datetime-local" required="true">
                                <small id="hour" class="form-tet text-muted"> Fecha y hora </small>
                            </div>
                            <input name="approved" id="approved" type="hidden" required="true">
                            <input name="currency" id="currency" type="hidden" required="true">
                            <div class="form-group">
                                <input class="btn btn-lg btn-block btn-primary" type="submit" value="{{ buttonName }}" />
                            </div>
                            <br><br><br><br>
                        </form>
                    </article>
                </section>
            </div>
        </div>
    </div>
</div>