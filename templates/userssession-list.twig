<div class="card-body">
    <section class="container row" style="width: auto; margin: auto auto;">
        <article class="col-md-12">
            <table class="table table-bordered table-hover table-condensed">
                <thead class="text-center bg-dark text-white">
                    <th> Jugador </th>
                    <th> Hora <br>de inicio </th>
                    <th> Cashin </th>
                    <th> Cashout </th>
                    <th> Acciones </th>
                </thead>
                <tbody class="text-center">
                    {% for user in usersSession %}
                    {% if user.endTime is empty %}
                    <tr class="text-center">
                        <td>
                            {{ user.user.name }} {{ user.user.lastname }}
                        </td>
                        <td> {{ user.startTime.date|date('H:i') }}
                        </td>
                        <td> {{ user.cashin|number_format }} ({{ user.totalCredit|number_format }}) </td>
                        <td> {{ user.cashout|default("-") }} </td>
                        <td> <a href="/userssession/{{ user.id }}/formclose"> <i class="fas fa-sign-out-alt"></i> </a> 
                             <a href="#" onclick="updateUserSession({{ user.idSession }}, {{ user.id }});"> <i class="fas fa-pencil-alt"> </i> </a> 
                             <a href="#" onclick="deleteUserSession({{ user.idSession }}, {{ user.id }});"> <i class="fas fa-trash-alt"></i> </a> 
                             </td>
                    </tr>
                    {% endif %}
                    {% endfor %}
                    <tr>
                        <td colspan="9">
                            <a href="#" class="btn btn-lg btn-block btn-danger" onclick="addUserSession({{ idSession }});"> <i class="fas fa-plus"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </article>
    </section>
</div>