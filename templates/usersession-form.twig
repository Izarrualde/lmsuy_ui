<div class="container">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                {{ title }}
            </div>
            <div class="card-body">
                <section class="container row justify-content-center">
                    <article>
                        <form class="was-validated" id="userssession-form" onsubmit="userSessionSubmit({{ idSession }}); return false;" action="{{ action }}" method="post">

                            <input id="id" name="id" type="hidden" value="">
                            <input name="idUser" id="idUser" type="hidden" value="{{ userSession.idUser }}">
                            <input name="idSession" id="idSession" type="hidden" value="">
                            <input class="form-control" name="points" id="points" type="hidden" required="true">
                            <input name="isApproved" id="isApproved" type="hidden" value="">
                            <input class="form-control" name="cashout" id="cashout" type="hidden" required="true" value="">

                            <div class="form-group">
                                <label class="sr-only" for="start"> Inicio: </label>
                                <input class="form-control" autofocus="true" name="start" id="start" type="datetime-local" value="">
                                <small id="start" class="form-tet text-muted"> Fecha y hora de inicio </small>
                            </div>

                            <div class="form-group">
                                <input class="btn btn-lg btn-block btn-primary" type="submit" value="{{ buttonName }}" />
                            </div>
                            <br><br><br><br>
                        </form>
                    </article>
                </section>
            </div>
        </div>
    </div>
</div>